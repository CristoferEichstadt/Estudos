@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}

<link href="~/Content/adm/css/Categoria.css" rel="stylesheet" />
<script src="~/Content/assets/plugins/jquery.min.js"></script>


<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget ">
                        <div class="widget-header">
                            <i class="icon-user"></i>
                            <h3>Cadastro de Categorias - Subcategorias</h3>
                        </div>
                        <div class="widget-content">

                            <div style="text-align:center;">
                                <form action="/Categoria/EditaCategoria" id="formCategoria" method="post">
                                    <div>
                                        <input type="hidden" name="categoria.Id" value="@ViewBag.Categoria.Id"/>
                                        <input type="hidden" name="categoria.Ativo" value="@ViewBag.Categoria.Ativo" />
                                        <label id="textNome" for="nome">Categoria</label>
                                        <input id="nomeCategoria" name="categoria.Nome" placeholder="Insira o nome da categoria" autofocus value="@ViewBag.Categoria.Nome"
                                               class="form-control" maxlength="20" />

                                        <div class="form-row">

                                            <input type="submit" id="botaoCat" class="btn btn-danger btn-block botao" value="Adicionar Categoria" />
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div style="float:right;"><a href="/Categoria/Index">Voltar</a></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>