
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>
    <div>

        <form action="/Categoria/AdicionaCategoria" id="formCategoria" method="post">
            <div>
                <label id="textNome" for="nome">Nome</label>
                <input id="nomeCategoria" name="nome" placeholder="Insira o nome da categoria" autofocus value="@ViewBag.Categoria.Nome"
                       class="form-control" maxlength="20" />

                <div class="form-row">

                    <input type="submit" class="btn btn-danger btn-block botao" value="Adicionar Categoria" />
                </div>
            </div>
        </form>

    </div>
</body>
</html>


