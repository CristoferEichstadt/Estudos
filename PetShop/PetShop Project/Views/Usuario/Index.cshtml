
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutADM.cshtml";
}



<div class="main">
    <div class="main-inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="widget ">
                        <div class="widget-header">
                            <i class="icon-table"></i>
                            <h3>Usuários</h3>
                        </div>
                        <div class="widget-content">
                            <div>
                                <div>
                                    <div style="float:right;">
                                        <button class="btn btn-success" id="btnFuncionario">+ Funcionario </button>
                                        <button class="btn btn-danger" id="status">Status</button>
                                    </div>
                                    <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Nome</th>
                                                <th>Perfil</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    @section body_scripts {
    $(document).ready(function () {
        var tabela = $('#dataTable').DataTable({
            dom: 'Bfrtip',
            select: { style: 'single'},
            "ajax": {
                "url": "/Usuario/pegaUsuarios/",
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": "Id", "autoWidth": true, },
                { "data": "Email", "autoWidth": true },
                {
                    "data": "Perfil", "autoWidth": true,
                    render: function (type, meta, row) {
                        if (row.Perfil == 'A') {
                            return "Admin";
                        } else if (row.Perfil == 'F') {
                            return "Funcionário";
                        } else {
                            return "Cliente";
                        }
                    } },
                {
                    "data": "Ativo", "autoWidth": true,
                    render: function (type, meta, row) {
                        if (row.Ativo == true) {
                            return "Ativo";
                        } else {
                            return "Inativo";
                        }
                        } },
            ],

        });

        $('#status').click(function () {
            var usuarioId = tabela.rows({ selected: true }).data()[0].Id;
            $.ajax({
                type: "GET",
                url: "/Usuario/Status/" + usuarioId,
                dataType: "json",
                success: function (response) {
                    if (response.mudou) {
                        alert("Status alterado com sucesso!");
                        tabela.ajax.reload();
                    }
                }
            });
        });

        $('#btnFuncionario').click(function () {
            window.location.href = "/Funcionario/Form/";
        });


        });



}




</script>



